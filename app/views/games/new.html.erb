<h3 class="mx-auto w-75 my-5 py-3">New game</h3>
<div class="container d-flex justify-content-between mx-auto w-50 my-5 py-3">
  <div class="letter bg-primary p-3 fw-bold text-white rounded"><%= @letters[0]%></div>
  <div class="letter bg-primary p-3 fw-bold text-white rounded"><%= @letters[1]%></div>
  <div class="letter bg-primary p-3 fw-bold text-white rounded"><%= @letters[2]%></div>
  <div class="letter bg-primary p-3 fw-bold text-white rounded"><%= @letters[3]%></div>
  <div class="letter bg-primary p-3 fw-bold text-white rounded"><%= @letters[4]%></div>
  <div class="letter bg-primary p-3 fw-bold text-white rounded"><%= @letters[5]%></div>
  <div class="letter bg-primary p-3 fw-bold text-white rounded"><%= @letters[6]%></div>
  <div class="letter bg-primary p-3 fw-bold text-white rounded"><%= @letters[7]%></div>
  <div class="letter bg-primary p-3 fw-bold text-white rounded"><%= @letters[8]%></div>
  <div class="letter bg-primary p-3 fw-bold text-white rounded"><%= @letters[9]%></div>
</div>
<div class="container mx-auto w-50 my-5 py-3">
  <form action="/score" method="post" data-turbo="false">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <label class="my-3" for="try">What is the longest word you can find?</label>
    <div class="d-flex">
      <input class="form-control" type="text" name="try">
      <input type="text" class="d-none" name="grid" value="<%=@letters%>">
      <input class ="brn btn-light shadow-none rounded" type="submit" value="Play">
    </div>
  </form>
</div>
